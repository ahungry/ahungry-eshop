div(class='game')
  table
    tr
      td(width=200)
        if boxart
          a(href=boxart, target='_blank')
            img(src=boxart)
        else
          a(href=horizontalHeaderImage, target='_blank')
            img(src=horizontalHeaderImage, width=100)
        p #{title}

      td(valign='top')
        p(style={'font-size': '12px'}) #{description}

    tr
      td
        div MSRP: #{msrp}
        div salePrice: #{salePrice}
      td
        a(href='https://nintendo.com' + url, target='_blank') https://nintendo.com/#{url}
